# Test some pretty pathological branch names.
# Also, ensure we show the correct branch even when there are other
# branches at the same commit.  

. $MYDIR/utilities.sh

MKDIR dir

set_up_a_repo_and_one_upstream


branches=\
"branches/1
branches/\$
d.\"dot\"
-dot's
!
\$!"


cd "$dir/upstream"
git checkout -q -b branch
while read -r branch; do
  git checkout -q -b "$branch"
done <<EOL
$branches
EOL

# Add the subtree
cd "$dir/proj"

git-subtree clone "file://$dir/upstream" branch
git commit -q -m "add upstream subtree"

cd upstream
echo "initial branch:"
git-subtree branch

while read -r branch; do
  echo "merge $branch"
  git-subtree merge "upstream/$branch"
  git-subtree branch
done <<EOL
$branches
EOL

cd "$dir/proj"
echo ".git-subtrees:"
cat .git-subtrees | sed -e 's/^/  /'

cd "$dir"
rm -rf upstream proj

STDOUT:
